<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/price_card"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="5dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/relative_layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/curved_edges"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/brandLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/productImage"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="265dp"
                android:layout_marginBottom="356dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="82dp"
                android:layout_marginTop="73dp"
                android:gravity="center"
                android:text="â‚¦0.00"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/new_price_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="New price"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/new_price_Entry"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="21dp"
                android:inputType="number|numberDecimal"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textStyle="italic" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>