<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
            <TextView
                android:id="@+id/ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="ref: 5th july, 2025: 5:00pm"
                android:textSize="18sp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customerName"
                app:layout_constraintTop_toBottomOf="@id/ref"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Customer placeholder"
                android:textColor="@color/black"
                android:textSize="18.sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rGrandTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/customerName"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/grand_total"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rGrandTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/rGrandTotalLabel"
                app:layout_constraintStart_toEndOf="@id/rGrandTotalLabel"
                android:layout_marginStart="25dp"
                android:text="@string/zero_naira"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>