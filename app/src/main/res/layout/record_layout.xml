<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="customer placeholder"
        android:textSize="18.sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/rDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/customerName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Date"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/rTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/customerName"
        app:layout_constraintStart_toEndOf="@id/rDate"
        android:text="time"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_dots"
        app:layout_constraintTop_toBottomOf="@id/rDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_dots"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Quantity"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:id="@+id/QuantityLabel"
        android:layout_marginRight="20dp"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_dots"
        app:layout_constraintStart_toEndOf="@id/QuantityLabel"
        android:layout_marginStart="10dp"
        android:text="Brand"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/Brandlabel"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_dots"
        app:layout_constraintStart_toEndOf="@id/Brandlabel"
        android:text="Total"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:id="@+id/Totallabel"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/second_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/QuantityLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        android:textColor="@color/black"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_dots"
        android:orientation="vertical"
        android:id="@+id/record_container"/>
    <TextView
        android:id="@+id/last_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/record_container"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        android:textColor="@color/black"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/rGrandTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/last_dots"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/grand_total"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/last_dots"
        app:layout_constraintStart_toEndOf="@id/rGrandTotalLabel"
        android:text="@string/zero_naira"
        android:textColor="@color/black"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>