<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    tools:context=".Products">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Receipt"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="BOMA INVESTMENT AND RESOURCES LTD"
            android:id="@+id/brand_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="customer name"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brand_name" />
        <TextView
            android:id="@+id/rDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rCustomerName"
            app:layout_constraintStart_toStartOf="parent"
            android:text="date"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/rTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/rCustomerName"
            app:layout_constraintStart_toEndOf="@id/rDate"
            android:text="time"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_dots"
            app:layout_constraintTop_toBottomOf="@id/rDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_dots"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Quantity"
            android:textColor="@color/black"
            android:layout_marginStart="35dp"
            android:gravity="center"
            android:id="@+id/kwantity"
            android:layout_marginRight="20dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_dots"
            app:layout_constraintStart_toEndOf="@id/kwantity"
            android:layout_marginStart="5dp"
            android:text="Brand"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/label"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_dots"
            app:layout_constraintStart_toEndOf="@id/label"
            android:text="Total"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:id="@+id/Totallabel"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/second_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kwantity"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll_view"
            app:layout_constraintTop_toBottomOf="@id/second_dots"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/receipt_container"/>
        </ScrollView>
        <TextView
            android:id="@+id/last_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scroll_view"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/rGrandTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/last_dots"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:text="Grand Total: "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rGrandTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/last_dots"
            app:layout_constraintStart_toEndOf="@id/rGrandTotalLabel"
            android:layout_marginLeft="120dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/amt_paid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rGrandTotalLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Paid â‚¦"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/amt_paid_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rGrandTotalLabel"
            app:layout_constraintStart_toEndOf="@id/amt_paid_label"
            android:hint="amount paid"/>

        <TextView
            android:id="@+id/balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/amt_paid_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:text="Balance"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/balance_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/amt_paid_label"
            app:layout_constraintStart_toEndOf="@id/balance_label"
            android:textSize="18sp"
            android:text="balance"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/savescrnsht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/balance_label"
            app:layout_constraintStart_toStartOf="parent"
            android:text="save screenshot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/copyReceipt"/>
        <Button
            android:id="@+id/copyReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/balance_label"
            app:layout_constraintStart_toEndOf="@id/savescrnsht"
            android:text="copy receipt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>